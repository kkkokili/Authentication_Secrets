<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Login to Secrets</h1>
  <br>
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">

        <!-- Makes POST request to /login route -->
        <form action="/login" method="POST">
          <div class="form-group">
            <input type="email" class="form-control" name="username" placeholder="Email">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-dark">Login</button>
        </form>
      </div>
    </div>
  </div>
  <br>
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <a class="btn btn-block btn-social btn-google"  style="background-color: red; color: white;" href="/auth/google" role="button">
          <i class="fab fa-google" style="color: white;"></i>
          Sign In with Google
        </a>
      </div>

      <div class="card-body">
        <a class="btn btn-block btn-social btn-facebook" style="background-color: #4267B2; color: white;" href="/auth/facebook" role="button">
          <i class="fab fa-facebook" style="color: white;"></i>
          Sign In with Facebook
        </a>
      </div>

      <div class="card-body">
        <a class="btn btn-block btn-social btn-wechat" style="background-color: green; color: white;" href="/auth/wechat" role="button">
          <i class="fab fa-weixin" style="color: white;"></i>
          Sign In with Wechat
        </a>
      </div>

    </div>
  </div>
</div>

<%- include('partials/footer') %>
